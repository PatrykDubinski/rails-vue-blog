<div class="container my-3">
  <% @posts.each do |post| %>
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <p><%= post.title %></p>
        <p class="font-italic">by <%= post.user.email %></p>
      </div>
      <div class="card-body">
        <p class="card-text"><%= post.body %></p>
        <%= link_to 'Show', post_path(post), class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_admin_post_path(post), class: "btn btn-primary" %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>

